<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:paddingLeft="5dp"
              android:paddingRight="5dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="0.2"
                  android:gravity="center"
                  android:text="@string/set_password_label_password"/>

        <EditText android:id="@+id/note_list_set_password"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:password="true"
                  android:hint="@string/set_password_label_password"
                  android:layout_weight="1.0"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="0.2"
                  android:gravity="center"
                  android:text="@string/set_password_label_confirm"/>

        <EditText android:id="@+id/note_list_set_password_confirm"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:password="true"
                  android:hint="@string/set_password_label_confirm"
                  android:layout_weight="1.0"/>
    </LinearLayout>


</LinearLayout>